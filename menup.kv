#:import Factory kivy.factory.Factory
<Info@Popup>:
    auto_dismiss: False
    size_hint:.8,.5
    title:"Inf. do APP"
    auto_dismiss:'True'
    Label:
        text: '4U Contrucoes\n\nEste aplicativo foi desenvolvido na Liguagem Python Utilizando a Biblioteca Kivy por:\nBruno B. Linhares'
        text_size:self.size
        halign:'center'
        valign:'center'
<Info2@Popup>:
    auto_dismiss: False
    size_hint:.8,.5
    title:"Aviso"
    auto_dismiss:'True'
    Label:
        text: 'Estamos em desenvolvimento, em breve apresentaremos novidade'
        text_size:self.size
        halign:'center'
        valign:'center'
<MenuP@Screen>:
    name:"mp"
    BoxLayout:
        size_hint:1,1
        spacing:5
        padding:(5,5,5,5)
        orientation:'vertical'
        GridLayout:
            cols:2
            size_hint:1, None
            height:dp(40)
            Image:
                source: 'img/4u.png'
                size_hint:1, None
                height:dp(40)
                halign:'center'
                valign:'center'
            AnchorLayout:
                size_hint:None, None
                height:dp(40)
                width:dp(55)
                Image:
                    source: 'img/inf.png'
                    size_hint:1, None
                    height:dp(40)
                    halign:'center'
                    valign:'center'
                Button:
                    size_hint:1, None
                    opacity:0
                    on_press:
                        Factory.Info().open()
        Button:
            text:'Menu Principal'
            size_hint:1,None
            height:dp(40)
        ScrollView:
            size_hint:1,1
            BoxLayout:
                size_hint:1,None
                height:dp(55)
                Button:
                    text:'Diario de Bordo'
                    size_hint:1, None
                    height:dp(55)
                    on_press:
                        root.manager.current = 'db'

        GridLayout:
            cols:2
            size_hint:1, None
            height:dp(40)
            Button:
                text:'teste1'
                on_press:
                    Factory.Info2().open()
            Button:
                text:'teste2'
                on_press:
                    Factory.Info2().open()