#:import Factory kivy.factory.Factory
<Info@Popup>:
    auto_dismiss: False
    size_hint:.8,.5
    title:"Informações do APP"
    auto_dismiss:'True'
    Label:
        text: '4U Contruções\n\nEste aplicativo foi desenvolvido na Liguagem Python Utilizando a Biblioteca Kivy por:\nBruno B. Linhares'
        text_size:self.size
        halign:'center'
        valign:'center'

<Info2@Popup>:
    auto_dismiss: False
    size_hint:.8,.5
    title:"Aviso"
    auto_dismiss:'True'
    Label:
        text: 'Estamos em desenvolvimento, em breve apresentaremos novidade'
        text_size:self.size
        halign:'center'
        valign:'center'

